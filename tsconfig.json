{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "outDir": "./build",
        "rootDir": "./src",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "importHelpers": true,
        "esModuleInterop": true,
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": "src",
        "paths": {
            "@/*": ["*"]
        },
        "lib": ["es2021", "dom"]
    },
    "include": ["src/**/*.ts", "src/**/*.json", ".env"],
    "exclude": ["node_modules", "src/http", "src/logs", "src/tests"]
}
